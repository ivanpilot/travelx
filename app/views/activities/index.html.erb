<h2>Create a new activity</h2>
<%= form_for @activity do |activity|%>
  <%= activity.label :Description %><br>
  <%= activity.text_area :description %><br>
  <%= activity.label :Rating %><br>
  <%= activity.text_field :rating %><br><br>

  <%= activity.submit "Create Activity", class:"btn btn-primary" %>
<% end %><br><br>


<h2>Activities</h2><br>
<ul>
  <% @activities.each do |activity|%>
    <li>
      Description: <%= activity.description %> | Rating: <%= activity.rating %> |
      <%=link_to "Edit", edit_activity_path(activity) %> |
      <%=link_to "Delete", activity_path(activity),method: :delete, data: {confirm: 'Are you sure?'}%> <br>
    </li>
      Boards: <%=boards_related_to(activity)%><br><br>
  <% end %>
</ul>
