<h2>Create a new activity</h2>
<%= form_activities (@activity) %>
<br><br>


<h2>Activities</h2><br>
<ul>
  <% @activities.each do |activity|%>
    <li>
      Description: <%= activity.description %> | Rating: <%= activity.rating %>
      <%=link_to "| Edit", edit_activity_path(activity) if policy(activity).edit? %>
      <%=link_to "| Delete", activity_path(activity),method: :delete, data: {confirm: 'Are you sure?'} if policy(activity).destroy? %> <br>
    </li>
      Boards: <%=boards_related_to(activity)%><br><br>
  <% end %>
</ul>
